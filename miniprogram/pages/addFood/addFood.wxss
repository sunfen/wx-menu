.modal-picker {
  width: 100%;
  overflow: hidden;
  position: fixed;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  border-radius: 36rpx;
}


.modal-title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx;
